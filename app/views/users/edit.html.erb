<h1>Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/error_messages', object: @user %>
      <%= form_for(@user) do |f| %>
			  <hr class="colorgraph">
  			<div class="row">
  				<div class="col-xs-12 col-sm-6 col-md-6">
  					<div class="form-group">
              <%= f.text_field :first_name, :class => "form-control input-lg", :placeholder => "First Name", :tabindex => 1 %>
  					</div>
  				</div>
  				<div class="col-xs-12 col-sm-6 col-md-6">
  					<div class="form-group">
               <%= f.text_field :last_name, :class => "form-control input-lg", :placeholder => "Last Name", :tabindex => 2 %>
  					</div>
  				</div>
  			</div>
        <div class="form-group">
          <%= f.email_field :email, :class => "form-control input-lg", :placeholder => "Email Address (john@example.com)", :tabindex => 3 %>
  			</div>
  			<div class="form-group">
          <%= f.text_field :phone_number, :class => "form-control input-lg", :placeholder => "Phone Number", :tabindex => 4 %>
  			</div>
        <div class="form-group">
          <%= f.text_field :zip_code, :class => "form-control input-lg", :placeholder => "Zip code", :tabindex => 5 %>
  			</div>

  			<div class="form-group">
          <%= f.password_field :password, :class => "form-control input-lg", :placeholder => "Password", :tabindex => 7 %>
  			</div>

  			<div class="form-group">
          <%= f.password_field :password_confirmation, :class => "form-control input-lg", :placeholder => "Confirm Password", :tabindex => 8 %>
  			</div>

        <hr class="colorgraph">
  			<div class="form-group">
          <%= f.submit "Save changes", :class => "btn btn-primary btn-block btn-lg", :tabindex => 9 %>
        </div>
      <% end %>
   </div>
</div>
